        <RadioButton x:Name="rbnblauw" Content="blauw" HorizontalAlignment="Left" Margin="253,90,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rdnrood" Content="rood (+700 euro)" HorizontalAlignment="Left" Margin="253,130,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rdngroen" Content="groen ( +250 euro )" HorizontalAlignment="Left" Margin="253,110,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="cbxspeakers" Content="Bose audio speakers (+1250euro)" HorizontalAlignment="Left" Margin="253,176,0,0" VerticalAlignment="Top" Width="209"/>
        <CheckBox x:Name="cbxrood" Content="Aluminium velgen (+ 300 euro )" HorizontalAlignment="Left" Margin="253,216,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="cbxmatjes" Content="deluxe matjes (+450euro)" HorizontalAlignment="Left" Margin="253,196,0,0" VerticalAlignment="Top"/>
        <Label Content="Model &amp; Kleur" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" Height="55" Width="209" FontSize="22"/>
        <Label x:Name="lbltotaalprijs" Content="" HorizontalAlignment="Left" Margin="253,315,0,0" VerticalAlignment="Top" Height="55" Width="209"/>
        <Label Content="Accessoirers" HorizontalAlignment="Left" Margin="10,178,0,0" VerticalAlignment="Top" Height="55" Width="209" FontSize="22"/>
        <Label Content="Totaalprijs" HorizontalAlignment="Left" Margin="10,315,0,0" VerticalAlignment="Top" Height="55" Width="209" FontSize="22"/>
        <Image HorizontalAlignment="Left" Height="112" Margin="495,33,0,0" VerticalAlignment="Top" Width="270"/>

    </Grid>
</Window>
