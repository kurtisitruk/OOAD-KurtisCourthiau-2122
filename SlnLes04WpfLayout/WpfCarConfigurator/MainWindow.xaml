<Window x:Class="WpfCarConfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCarConfigurator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox HorizontalAlignment="Left" Margin="246,33,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem IsSelected="True">...</ComboBoxItem>
            <ComboBoxItem>continental V8 (850000 euro)</ComboBoxItem>
            <ComboBoxItem>convertible (72000euro)</ComboBoxItem>
            <ComboBoxItem>mulsanne (65300 euro)</ComboBoxItem>
