<Window x:Class="DemoWpfEllipsTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoWpfEllipsTimer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="canvas1" HorizontalAlignment="Left" Height="250" Margin="78,52,0,0" VerticalAlignment="Top" Width="500" Background="#FFEEE7E7">
            <Ellipse x:Name="ellips1" Fill="#FFF4F4F5" Height="100" Stroke="Black" Width="148"/>
        </Canvas>
        <Slider x:Name="sldHor" HorizontalAlignment="Left" Height="23" Margin="78,337,0,0" VerticalAlignment="Top" Width="500" Value="200" Maximum="500" ValueChanged="SldHor_ValueChanged"/>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Height="35" Margin="631,29,0,0" VerticalAlignment="Top" Width="112" Click="BtnStart_Click"/>
    </Grid>
</Window>
